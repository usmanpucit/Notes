<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.usman.noteapplication.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Register"
        android:id="@+id/textView"
        android:layout_marginTop="47dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#e54172"
        android:layout_marginLeft="20dp"
        android:textSize="50dp" />
    <TextView
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:background="#e54172"
        android:textColor="#e54172"
        android:textSize="50dp"
        android:layout_above="@+id/email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:drawableRight="@android:drawable/ic_input_add"
        android:id="@+id/name"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"

        android:clickable="false"
        android:outlineProvider="background"
        android:layout_marginLeft="30dp"
        android:contextClickable="false"
        android:hint="Name"
         />


    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:outlineProvider="background"
        android:drawableRight="@android:drawable/ic_input_add"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:clickable="false"
        android:contextClickable="false"
        android:hint="Email"
        android:layout_marginLeft="30dp"
        android:layout_alignParentStart="true" />


    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:drawableRight="@android:drawable/ic_input_add"
        android:layout_marginTop="10dp"
        android:id="@+id/password"
        android:outlineProvider="background"
        android:hint="Password"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/register"
        android:background="#e54172"
        android:capitalize="words"
        android:contextClickable="true"
        android:elegantTextHeight="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:layout_below="@+id/date"
        android:layout_centerHorizontal="true"
         />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select DOB"
        android:id="@+id/date"
        android:background="#e54172"
        android:capitalize="words"
        android:contextClickable="true"
        android:elegantTextHeight="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:layout_below="@+id/gender"
        android:layout_centerHorizontal="true"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gender"
        android:layout_below="@+id/password"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/imageView"
        android:src="@drawable/m"
        android:layout_alignTop="@+id/gender"
        android:layout_alignRight="@+id/register"
        android:layout_alignEnd="@+id/register" />


</RelativeLayout>
    </ScrollView>
